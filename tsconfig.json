{
  "compilerOptions": {
    "target": "es2016",                              
    "esModuleInterop": true,                                               
    "forceConsistentCasingInFileNames": true,   
    "moduleResolution": "node",        
    "strict": true,  
    "sourceMap": true,
    "outDir": "./build", 
    "rootDir" : "./src",  
    "removeComments": true,         
    "skipLibCheck": true                            
  }
}
